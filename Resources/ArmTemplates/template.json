{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "functionAppPrefix": {
        "type": "string",
        "metadata": {
          "description": "Prefix for the function app resources, in the form dfc-env-proj-fnapp"
        }
      },
      "appServicePlanName": {
        "type": "string",
        "metadata": {
          "description": "App service plan to run the function app under"
        }
      },
      "appServicePlanResourceGroup": {
        "type": "string",
        "metadata": {
          "description": "Resource group the app service plan is in"
        }
      },
      "storageConnectionString": {
        "type": "securestring",
        "metadata": {
          "description": "Connection string for the storage account to store function app files"
        }
      },
      "apimServiceName": {
        "type": "string",
        "metadata": {
          "description": "APIM name"
        }
      },
      "apimResourceGroup": {
        "type": "string",
        "metadata": {
          "description": "Resource group where the APIM is located"
        }
      },
      "apiName": {
        "type": "string",
        "metadata": {
          "description": "API name"
        }
      },
      "apiProductDisplayName": {
        "type": "string",
        "metadata": {
          "description": "The display name for the projects APIM product"
        }
      },
      "apiSuffix": {
        "type": "string",
        "defaultValue": "",
        "metadata": {
          "description": "Suffix uniquely identifying this API and all of its resource paths within APIM, defaults to apiName"
        }
      },
      "cosmosDbEndpoint": {
        "type": "string",
        "metadata": {
          "description": "Url to the providerportal cosmosb account"
        }
      },
      "cosmosDbAccountKey": {
        "type": "securestring",
        "metadata": {
          "description": "primary key for the providerportal cosmosb account"
        }
      },
      "apimKey": {
        "type": "securestring",
        "metadata": {
          "description": "Key to access APIM instances"
        }
      },
      "providerApiUrl": {
        "type": "string",
        "metadata": {
          "description": "Url to the provider api"
        }
      },
      "referenceDataApiUrl": {
        "type": "string",
        "metadata": {
          "description": "Url to the reference data api"
        }
      }
    },
    "variables": {
      "deploymentUrlBase": "https://raw.githubusercontent.com/SkillsFundingAgency/dfc-devops/master/ArmTemplates/",
      "functionAppName": "[concat(parameters('functionAppPrefix'),'-fa')]",
      "appInsightName": "[concat(parameters('functionAppPrefix'),'-ai')]"
    },
    "resources": [
      {
        "apiVersion": "2017-05-10",
        "name": "ppfindapprenticeshipAppInsights",
        "type": "Microsoft.Resources/deployments",
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[concat(variables('deploymentUrlBase'),'application-insights.json')]",
            "contentVersion": "1.0.0.0"
          },
          "parameters": {
            "appInsightsName": {
              "value": "[variables('appInsightName')]"
            },
            "attachedService": {
              "value": "[variables('functionAppName')]"
            }
          }
        }
      },
      {
        "apiVersion": "2017-05-10",
        "name": "ppfindapprenticeshipAppService",
        "type": "Microsoft.Resources/deployments",
        "dependsOn": [
          "ppfindapprenticeshipAppInsights"
        ],
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[concat(variables('deploymentUrlBase'),'app-service.json')]",
            "contentVersion": "1.0.0.0"
          },
          "parameters": {
            "appServiceName": {
              "value": "[variables('functionAppName')]"
            },
            "appServicePlanName": {
              "value": "[parameters('appServicePlanName')]"
            },
            "appServicePlanResourceGroup": {
              "value": "[parameters('appServicePlanResourceGroup')]"
            },
            "appServiceType": {
              "value": "functionapp"
            },
            "appServiceAppSettings": {
              "value": [
                {
                  "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                  "value": "[reference('ppapprenticeshipAppInsights').outputs.InstrumentationKey.value]"
                },
                {
                  "name": "FUNCTIONS_EXTENSION_VERSION",
                  "value": "~2"
                },
                {
                  "name": "AzureWebJobsStorage",
                  "value": "[parameters('storageConnectionString')]"
                },
                {
                  "name": "CosmosDbSettings__EndpointUri",
                  "value": "[parameters('cosmosDbEndpoint')]"
                },
                {
                  "name": "CosmosDbSettings__PrimaryKey",
                  "value": "[parameters('cosmosDbAccountKey')]"
                },
                {
                  "name": "CosmosDbSettings__DatabaseId",
                  "value": "providerportal"
                },
                {
                  "name": "CosmosDbCollectionSettings__ApprenticeshipCollectionId",
                  "value": "apprenticeship"
                },
                {
                  "name": "ProviderServiceSettings__ApiUrl",
                  "value": "[parameters('providerApiUrl')]"
                },
                {
                  "name": "ProviderServiceSettings__ApiKey",
                  "value": "[parameters('apimKey')]"
                },
                {
                  "name": "ReferenceDataServiceSettings__ApiUrl",
                  "value": "[concat(parameters('referenceDataApiUrl'), '/api/referencedata/fe-choices/')]"
                },
                {
                  "name": "ReferenceDataServiceSettings_ApiKey",
                  "value": "[parameters('apimKey')]"
                }
              ]
            },
            "deployStagingSlot": {
              "value": false
            }
          }
        }
      },
      {
        "name": "ppfindapprenticeshipApimProduct",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2017-05-10",
        "resourceGroup": "[parameters('apimResourceGroup')]",
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[concat(variables('deploymentUrlBase'), 'APIM/apim-product.json')]",
            "contentVersion": "1.0.0.0"
          },
          "parameters": {
            "allowAnonymousAccess": {
              "value": false
            },
            "apimServiceName": {
              "value": "[parameters('apimServiceName')]"
            },
            "productDisplayName": {
              "value": "[parameters('apiProductDisplayName')]"
            }
          }
        }
      },
      {
        "name": "ppfindapprenticeshipApimApi",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2017-05-10",
        "resourceGroup": "[parameters('apimResourceGroup')]",
        "dependsOn": [
          "ppfindapprenticeshipApimProduct"
        ],
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[concat(variables('deploymentUrlBase'), 'APIM/apim-api.json')]",
            "contentVersion": "1.0.0.0"
          },
          "parameters": {
            "apimProductInstanceName": {
              "value": "[reference('ppfindapprenticeshipApimProduct').outputs.ApimProductInstanceName.value]"
            },
            "apimServiceName": {
              "value": "[parameters('apimServiceName')]"
            },
            "apiName": {
              "value": "[parameters('apiName')]"
            },
            "apiSuffix": {
              "value": "[parameters('apiSuffix')]"
            }
          }
        }
      }
    ],
    "outputs": {
      "functionAppName": {
        "type": "string",
        "value": "[variables('functionAppName')]"
      },
      "appInsightName": {
        "type": "string",
        "value": "[variables('appInsightName')]"
      },
      "appInsightInstrumentationKey": {
        "type": "string",
        "value": "[reference('ppfindapprenticeshipAppInsights').outputs.InstrumentationKey.value]"
      }
    }
  }